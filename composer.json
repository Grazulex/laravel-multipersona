{
    "name": "grazulex/laravel-multipersona",
    "description": "Laravel MultiPersona is a lightweight context-layer system for Laravel users. It allows a single user to switch between different roles, accounts, or tenants dynamically, without creating multiple logins or sessions.",
    "keywords": [
        "laravel",
        "multipersona",
        "context",
        "persona",
        "roles",
        "tenants",
        "middleware",
        "php8",
        "pest"
    ],
    "type": "library",
    "homepage": "https://github.com/grazulex/laravel-multipersona",
    "require": {
        "php": "^8.3",
        "illuminate/support": "^11.0|^12.0",
        "nesbot/carbon": "^3.10"
    },
    "require-dev": {
        "laravel/pint": "^1.22",
        "pestphp/pest": "^3.8",
        "pestphp/pest-plugin-laravel": "^3.2",
        "larastan/larastan": "^3.4",
        "rector/rector": "^2.0",
        "doctrine/dbal": "^4.2",
        "orchestra/testbench": "^9.0|^10.0"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "suggest": {
        "doctrine/dbal": "Required for database operations and migrations"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Grazulex\\LaravelMultiPersona\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Grazulex\\LaravelMultiPersona\\LaravelMultiPersonaServiceProvider"
            ]
        }
    },
    "authors": [
        {
            "name": "Jean-Marc Strauven",
            "email": "jms@grazulex.be",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/Grazulex/laravel-multipersona/issues",
        "source": "https://github.com/Grazulex/laravel-multipersona",
        "wiki": "https://github.com/Grazulex/laravel-multipersona/wiki",
        "forum": "https://github.com/Grazulex/laravel-multipersona/discussions",
        "docs": "https://github.com/Grazulex/laravel-multipersona/wiki"
    },
    "scripts": {
        "test": [
            "./vendor/bin/pest --colors=always --coverage"
        ],
        "pint": [
            "./vendor/bin/pint"
        ],
        "phpstan": [
            "./vendor/bin/phpstan analyse --memory-limit=2G --configuration=phpstan.neon"
        ],
        "rector": [
            "./vendor/bin/rector"
        ],
        "full": [
            "composer run-script pint",
            "composer run-script phpstan",
            "composer run-script rector",
            "composer run-script test"
        ],
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve --ansi"
        ],
        "lint": [
            "@php vendor/bin/pint --ansi",
            "@php vendor/bin/phpstan analyse --verbose --ansi"
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}